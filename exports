# Increase Bash history size. The default is 500.
export HISTSIZE='32768';
export HISTFILESIZE="${HISTSIZE}";

# Omit duplicates and commands that begin with a space from history.
export HISTCONTROL='ignoreboth';

# Donâ€™t clear the screen after quitting a manual page.
export MANPAGER='less -X';

export JAVA_HOME=$(/usr/libexec/java_home)

# Use gnu-bins installed with brew instead of OSX defaults
DIRS=(`brew --prefix`/opt/*/libexec/gnubin)
for dir in "${DIRS[@]}"
do
  PATH=$dir:$PATH
done
export PATH=$PATH:$JAVA_HOME/bin:/usr/local/sbin

# Add man pages for gnu-bins
MANS=(`brew --prefix`/opt/*/libexec/gnuman)
for man in "${MANS[@]}"
do
  MANPATH=$man:$MANPATH
done
export MANPATH=$MANPATH